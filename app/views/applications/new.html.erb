<%= form_for [@job, @application] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :resume %>
      <%= f.file_field :resume, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.submit 'Apply', class: 'btn btn-primary' %>
    </div>
  <% end %>
  