<h1><%= @job.title %></h1>
  <p><%= @job.description %></p>
  <p><strong>Localização:</strong> <%= @job.location %></p>
  <p><strong>Educação:</strong> <%= @job.education %></p>

<% if user_signed_in? && current_user.user_type === 'academic' %>
  <% unless @application.persisted? %>
    <%= form_for [@job, @application] do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Nome' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :resume, "Anexar Currículo (PDF)" %>
        <%= f.file_field :resume, class: 'form-control' %>
      </div>
      <%= f.submit 'Aplicar', class: 'btn btn-primary' %>
      <%= link_to 'Voltar', jobs_path, class: 'btn btn-secondary' %>
    <% end %>
  <% else %>
    <p>Você já aplicou para esta vaga.</p>
  <% end %>
<% end %>

