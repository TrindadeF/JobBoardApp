
<p style="color: green"><%= notice %></p>
<!DOCTYPE html>
<html>
  <head>
    <title>Lista de Vagas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container mt-10">
  <% if user_signed_in? %>
    <div class="text-center mb-4">
      <%= link_to 'New Job', new_job_path, class: "btn btn-primary me-2" %>
      <%= link_to 'View All Jobs', all_jobs_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
  <h1 class="text-center mb-4">Job Listings</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: all_jobs_path, method: :get, local: true, class: "d-flex" do %>
        <%= search_field_tag :search, params[:search], class: "form-control me-2", placeholder: "Search for jobs..." %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
    <%= yield %>
    <div id="liveAlertPlaceholder"></div>
    
    <%= yield %>
  <div class="row justify-content-center mt-5">
    <% @jobs.each do |job| %>
      <div class="col-md-4 d-flex align-items-stretch">
        <div class="card mb-4 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= job.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= job.company %></h6>
            <p class="card-text flex-grow-1"><%= truncate(job.description, length: 100) %></p>
            <p class="card-text"><small class="text-muted"><%= job.location %></small></p>
            <p class="card-text"><small class="text-muted"><%= job.education %></small></p>
            <div class="mt-auto">
              <%= link_to 'View Details', job_path(job), class: "btn btn-secondary btn-sm" %>
              <% if user_signed_in? %>
                <%= link_to 'Edit', edit_job_path(job), class: "btn btn-primary btn-sm" %>
                <%= link_to 'Delete', job_path(job), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  </body>
</html>
